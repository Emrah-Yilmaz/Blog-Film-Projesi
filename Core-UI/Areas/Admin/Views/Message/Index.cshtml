@model IEnumerable<EntityLayer.Concrete.Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">

        <div class="col-lg-12 animated fadeInRight">
            <div class="mail-box-header">


                <h2>
                   Gelen Kutusu
                </h2>

            </div>
            <div class="mail-box">

                <table class="table table-hover table-mail">
                    <tbody>
                        @foreach (var item in Model)
                       {
                            <tr class="unread">

                            <td class="mail-ontact"><a href="/Admin/Message/Inbox/@item.MessageId">@item.SenderUsername</a></td>
                            <td class="mail-subject"><a href="/Admin/Message/Inbox/@item.MessageId">@item.MessageDetails</a></td>
                            <td class="text-right mail-date"><i class="fa fa-clock-o"></i>@item.MessageDate</td>
                        </tr>
                       }
                       

                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>