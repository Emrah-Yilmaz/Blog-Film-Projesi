@model IEnumerable<EntityLayer.Concrete.Message>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<h1>Inbox</h1>
<div class="col-lg-9 animated fadeInRight">
    @foreach (var item in Model)
   {
       <div class="mail-box-header">
                <div class="float-right tooltip-demo">
                    <a href="/Admin/Message/ReplyMessage/@item.MessageId" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="" data-original-title="Reply"><i class="fa fa-reply"></i> Cevapla</a>
                    <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Move to trash"><i class="fa fa-trash-o"></i> </a>
                </div>
                <h2>
                    Gelen Mesaj
                </h2>
                <div class="mail-tools tooltip-demo m-t-md">


                    <h3>
                        <span class="font-normal">Konu: </span>@item.Subject
                    </h3>
                    <h5>
                        <span class="float-right font-normal">@item.MessageDate</span>
                        <span class="font-normal">Kimden: </span>@item.SenderUsername
                    </h5>
                </div>
            </div>
                <div class="mail-box">


                <div class="mail-body">
                    <p>
                       
                       @item.MessageDetails
                        </p>
                   
                   
                </div>
                  
                        <div class="mail-body text-right tooltip-demo">
                                <a class="btn btn-sm btn-white" href="/Admin/Message/ReplyMessage/@item.MessageId"><i class="fa fa-reply"></i> Cevapla</a>
                                <a href="#" title="" data-placement="top" data-toggle="tooltip" data-original-title="Trash" class="btn btn-sm btn-white"><i class="fa fa-trash-o"></i> Sil</a>
                        </div>
                        <div class="clearfix"></div>


                </div>
       
   }
            
            </div>
