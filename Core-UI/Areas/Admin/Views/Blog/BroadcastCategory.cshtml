@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BroadcastCategory";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<h1>Blog Düzenleme Sayfası</h1>

<div class="card">
    <div class="card-body">
        <h1 class="alert-success text-center shadow-lg">@ViewBag.msg</h1>
        <h4 class="card-title">Bloğun Yayınlanacağı Kategoriyi Atama Sayfası </h4>

        @using (Html.BeginForm("BroadcastCategory", "Blog", FormMethod.Post))
        {
            @Html.Label("Blog ID")
            @Html.TextBoxFor(x => x.BlogId, new {@class="form-control", @readonly="readonly"})

            @Html.Label("Başlık")
            @Html.TextBoxFor(x => x.BlogTitle, new {@class="form-control", @readonly="readonly"})
                       
            @Html.HiddenFor(x => x.CategoryId)
            <br />
            @Html.HiddenFor(x => x.BlogImage, new{@class="form-control"})
            <br />
            @Html.HiddenFor(x => x.FilmTimeInfo, new{@class="form-control"})
    
            @Html.Label("Alt Kategori")
            @Html.DropDownListFor(x => x.SubCategory,(List<SelectListItem>)ViewBag.categories, new{@class="form-control"})
           
           
            @Html.HiddenFor(x => x.Director, new{@class="form-control"})
            @Html.HiddenFor(x => x.UserID, new{@class="form-control"})
           
            <br />
           
            @Html.HiddenFor(x => x.Imdb, new{@class="form-control"})
          
            <br />
            @Html.HiddenFor(x => x.TrailerUrl, new{@class="form-control"})
            <br />

           

            @Html.HiddenFor(x => x.BlogContent, new{@class="form-control"})
            <br />

           

         
            <br />

            
            <br />


            <button type="submit" class="btn btn-success container">Yayınlacağı Kategoriyi Değiştir</button>
        }
    </div>
</div>


