@model IEnumerable<EntityLayer.Concrete.Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}
<div class="row">
            <div class="col-lg-12">
                <div class="wrapper wrapper-content animated fadeInUp">

                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>Tüm Bloglar</h5>
                           
                        </div>
                        <div class="ibox-content">
                           

                            <div class="project-list">

                                <table class="table table-hover">
                                    <tbody>
                                        @foreach (var item in Model)
                                       {
                                            <tr>
                                        <td class="project-status">
                                            @if(item.CommentStatus== true)
                                            {
                                                <span class="label label-primary">Yayında</span>
                                            }
                                            else
                                            {
                                               <span class="label label-default">Yayından Kaldırılmış</span>

                                            }

                                        </td>
                                        <td class="project-title">
                                            <a href="#">@item.CommentTitle</a>
                                            <br>
                                            <small>@item.CommentDate</small>
                                        </td>
                                        <td class="project-title">
                                           <p>@item.CommentContent</p>
                                           
                                        </td>
                                     
                                     
                                        <td class="project-actions">
                                           <a href="/Blog/SingleBlog/@item.BlogId" class="btn btn-success">Bloğu Göster</a>
                                        </td>
                                    </tr>
                                       }
                                   
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

