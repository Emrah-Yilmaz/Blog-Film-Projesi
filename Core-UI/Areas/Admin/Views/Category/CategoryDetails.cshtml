@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "SubCategory";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<div class="row">
    <div class="col-lg-9">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>@ViewBag.CategoryName  </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#" class="dropdown-item">Config option 1</a>
                        </li>
                        <li>
                            <a href="#" class="dropdown-item">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Afiş</th>
                            <th>İçerik Sayısı</th>
                            <th>Bloğu Göster</th>
                            <th>Sitede Göster</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td> <img src="@item.BlogImage" width=200px></td>
                                <td>@item.BlogTitle</td>
                                <td> <a href="/Admin/Blog/BlogDetails/@item.BlogId" class="btn btn-outline-info">Panelde Göster</a> </td>
                                <td> <a href="/Blog/SingleBlog/@item.BlogId" class="btn btn-outline-danger">Sitede Göster</a> </td>

                              

                                </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

