@model IEnumerable<EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "ProfileDetails";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<div class="row animated fadeInRight">

    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Profil Detayları</h5>
                </div>
                <div>
                    <div class="ibox-content no-padding border-left-right">
                        <img alt="image" class="img-fluid" src="@item.ImageUrl">
                    </div>
                    <div class="ibox-content profile-content">
                        <h4><strong>@item.NameSurname</strong></h4>
                        <p><i class="fa fa-envolepe-open"></i> @item.Email</p>
                        <p><i class="fa fa-mobile"></i> @item.PhoneNumber</p>
                        <h5>
                            Yazar Hakkında
                        </h5>
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitat.
                        </p>

                        <div class="user-button">
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-primary btn-sm btn-block"><i class="fa fa-envelope"></i> Mesaj Gönder </button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
    <div class="col-md-8">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Yazarın Aktiviteleri</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#" class="dropdown-item">Config option 1</a>
                        </li>
                        <li>
                            <a href="#" class="dropdown-item">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="col-lg-12">
                    @await Component.InvokeAsync("MemberActivities", new {id = ViewBag.writerId })

                </div>

            </div>
        </div>

    </div>
</div>

