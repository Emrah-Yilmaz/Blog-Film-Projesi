                            @Html.TextBoxFor(x => x.ContactMail, new{placeholder="Mail Adresiniz..."})
                             </div> </div>
                               <br />
                             
                               <br />
                              <div class="form-grids-3">
                            <div class="form-input">
                            @Html.TextAreaFor(x => x.ContactMessage, new{placeholder="Mesajınız ..."})
                             </div> </div>

                               <button type="submit" class="btn read-button">Gönder</button>
                        }
                  


