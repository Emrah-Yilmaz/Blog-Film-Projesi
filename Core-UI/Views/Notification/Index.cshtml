  @using EntityLayer.Concrete
  @model List<Notification>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h1>Index</h1>


<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Tüm Mesajlar </h4>
             
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          
                          <th> Konu </th>
                          <th> İçerik </th>
                          <th> Tarih </th>
                          <th> Bildirimi Göster </th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in Model)
                         {
                            <tr>

                            

                              <td> @item.NotificationType </td>
                        
                              <td> @item.NotificationDetails</td>

                              <td> @item.NotificationDate.ToShortDateString()</td>

                              <td> <a href="/Notification/Details/@item.NotificationId" class="btn btn-info">Bildirimi Göster </a> </td>

                            </tr>
                         }
                      
                      
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
