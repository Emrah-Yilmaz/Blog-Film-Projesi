@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/Theme/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Theme/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Theme/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/Theme/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/Theme/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>

            <h3>Register to IN+</h3>
            <p>Create account to see it in action.</p>
            <form class="m-t" role="form" asp-action="Register">
                <div class="form-group">
                    <input type="text" asp-for="@Model.NameSurname" placeholder="Ad Soyad " class="form-control">
                    <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
                

                </div>
                <div class="form-group">
                    <input type="text" asp-for="@Model.Username" placeholder="Kullanıcı Adı" class="form-control">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <input type="password" asp-for="@Model.Password" placeholder="Şifre" class="form-control">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="@Model.ConfirmPassword" placeholder="Şifre Tekrar" class="form-control">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span><div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Agree the terms and policy </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Zaten bir hesabın var mı? Giriş Sayfasına Dön</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Account/Login/">← Giriş Sayfasına Dön</a>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="js/jquery-3.1.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="js/plugins/iCheck/icheck.min.js"></script>
    <script>$(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>
